PSQL_DIR="/mnt/data3/epa/psql"

PROFILE:=/home/epotash/epa/default_profile
%include $[PROFILE]

wget_unzip()
    mkdir -p $(dirname $OUTPUT0)
    wget --output-document="$OUTPUT0" "$URL"
    unzip -o "$OUTPUT0" -d $OUTPUT1

psql()
    psql -v ON_ERROR_STOP=1 -f $INPUT && touch $OUTPUT

; create a schema (does not drop)
psql_schema()
    schema=$(basename $OUTPUT)
    psql -v ON_ERROR_STOP=1 -c "CREATE SCHEMA IF NOT EXISTS $schema" && mkdir -p $OUTPUT && touch $OUTPUT/schema

