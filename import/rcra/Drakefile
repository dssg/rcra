; download and unzip data 
!/mnt/data3/epa/import/rcra/ <- [-timecheck]   
    mkdir -p $OUTPUT
    wget -N -P $OUTPUT ftp://ftp.epa.gov/rcrainfodata/rcra_flatfiles/\*.gz
    gunzip $OUTPUT/*.txt.gz

; make load scripts (TXT to CSV to SQL) 
import/rcra/load_scripts/ <- import/rcra/make_import_scripts.sh, import/rcra/data_dictionary/ [-timecheck]
    mkdir -p $OUTPUT
    $INPUT $INPUT1 $OUTPUT

; for each file type create CSVs
!/mnt/data3/epa/import/rcra/A/ <- import/rcra/load_scripts/create_rcra_A_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/A
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/C/ <- import/rcra/load_scripts/create_rcra_C_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/C
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/F/ <- import/rcra/load_scripts/create_rcra_F_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/F
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/gis/ <- import/rcra/load_scripts/create_rcra_gis_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/gis
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/H/ <- import/rcra/load_scripts/create_rcra_H_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/H
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/P/ <- import/rcra/load_scripts/create_rcra_P_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/P
    $INPUT $INPUT1 $INPUT2 $OUTPUT

!/mnt/data3/epa/import/rcra/BR/ <- import/rcra/load_scripts/create_rcra_BR_csv.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts/ [-timecheck]
    mkdir -p $INPUT1/BR
    $INPUT $INPUT1 $INPUT2 $OUTPUT

; import CSVs in to PostgreSQL data base
!/mnt/data3/epa/psql/rcra <- import/rcra/import_rcra_data.sh, !/mnt/data3/epa/import/rcra/, import/rcra/load_scripts
    $INPUT $INPUT1 $INPUT2 && touch $OUTPUT
